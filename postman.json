                "exec": [
                  "var jsonData = pm.response.json();",
                  "",
                  "pm.test(\"Thu hồi tin nhắn thành công\", function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(jsonData.recalled).to.be.true;",
                  "});"
